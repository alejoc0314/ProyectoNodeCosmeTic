 <script>
        $(document).ready(function() {
            $('#addImageBtn').click(function() {
                $('#imageDialog').dialog({
                    title: 'Cargar imagen',
                    modal: true,
                    width: 400,
                    height: 200,
                    buttons: {
                        "Cancelar": function() {
                            $(this).dialog('close');
                        }
