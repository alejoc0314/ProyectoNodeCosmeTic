<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {{> header}}
    <title>{{titulo}}</title>


</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        {{> navbar}}

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>{{subtitulo}}</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                                <li class="breadcrumb-item active">{{consecutivo}}</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- SELECT2 EXAMPLE -->
                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title">{{subtitulo}} <p> Los campos señalados con <span
                                        style="color: red; vertical-align: super;">*</span> son obligatorios</p>
                            </h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="cedula">Nit-Cédula <span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="number" class="form-control" id="cedula"
                                            placeholder="Nit-Cédula proveedor" style="width: 100%;" />
                                    </div>
                                    <div class="texto2" id="texto2"></div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="nombre">Nombre Proveedor<span style="color: red;">*</span> </label>
                                        <input type="text" class="form-control" id="nombre"
                                            placeholder="Nombre proveedor" style="width: 100%;" />
                                    </div>
                                    <div class="texto1" id="texto1"></div>
                                </div>
                                <!-- /.form-group -->
                            </div>

                            <!-- /.col -->
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="correo">Correo<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="email" class="form-control" id="correo"
                                            placeholder="Correo proveedor" style="width: 100%;" />
                                    </div>
                                    <div class="texto3" id="texto3"></div>
                                </div>
                                <!-- /.form-group -->
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label for="direccion">Dirección<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="text" class="form-control" id="direccion"
                                            placeholder="Dirección proveedor" style="width: 100%;" />
                                    </div>
                                    <div class="texto4" id="texto4"></div>
                                </div>
                                <!-- /.form-group -->

                            </div>

                            <div class="row">

                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="telefono">Teléfono<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="text" class="form-control" id="telefono"
                                            placeholder="Teléfono proveedor" style="width: 100%;" />

                                    </div>
                                    <div class="texto5" id="texto5"></div>
                                    </br>
                                    <!-- /.form-group -->
                                </div>
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label for="observacion">Observacion</label>
                                        <input type="text" class="form-control" id="observacion"
                                            placeholder="Observacion proveedor" style="width: 100%;" />
                                    </div>
                                    <!-- /.form-group -->

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="nombre_contacto">Nombre Contacto<span
                                                style="color: red; vertical-align: super;">*</span> </label>
                                        <input type="text" class="form-control" id="nombre_contacto"
                                            name="contactoProov" placeholder="Nombre contacto" style="width: 100%;" />
                                    </div>
                                    <div class="texto8" id="texto8"></div>
                                </div>
                            </div>
                            <div class="col-lg-12">

                                <input class="sendbtn btn btn-success" id="btnRegistrar" type="button" value="Registrar"
                                    onclick="registrar()">
                                <a href="/proveedores"><button class="sendbtn btn btn-secondary"
                                        type="button">Regresar</button></a>

                                <script type="text/javascript" src="js/funcionesProveedores.js"></script>


                            </div>

                            <!-- /.card-body -->


                        </div>


                    </div>

                    <!-- /.card -->
                </div>
                <!-- /.col -->
        </div>
        <!-- /.row -->
        <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a>




    <!-- /.content-wrapper -->
    {{> footer}}

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->

    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/plugins/jszip/jszip.min.js"></script>
    <script src="/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="https://kit.fontawesome.com/4de2284caa.js" crossorigin="anonymous"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false, "autoWidth": false, "buttons": ["copy", "csv",
                    "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true, "lengthChange": false,
                "searching": false, "ordering": true, "info": true, "autoWidth": false,
                "responsive": true,
            });
        });


    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.11/dist/sweetalert2.all.min.js"></script>

</body>

</html>