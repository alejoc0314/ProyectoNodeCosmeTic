<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    {{> header}}
    <title>{{titulo}}</title>

</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        {{> navbar}}
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1>{{subtitulo}}</h1>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="/home">Home</a></li>
                                <li class="breadcrumb-item active">{{consecutivo}}</li>
                            </ol>
                        </div>
                    </div>
                </div><!-- /.container-fluid -->
            </section>

            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">
                    <!-- SELECT2 EXAMPLE -->
                    <div class="card card-default">
                        <div class="card-header">
                            <h3 class="card-title">{{subtitulo}} <p> Los campos se√±alados con <span
                                        style="color: red; vertical-align: super;">*</span> son obligatorios</p>    </h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                    <i class="fas fa-minus"></i>
                                </button>
                                <button type="button" class="btn btn-tool" data-card-widget="remove">
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <input type="hidden" class="form-control" id="id" style="width: 100%;" />
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="cedula">Cedula</label>
                                        <input type="text" class="form-control" id="cedula"
                                            placeholder="Digite su Cedula" style="width: 100%;" readonly />
                                    </div>
                                    <div class="texto2" id="texto2"></div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="nombre">Nombre<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="text" class="form-control" id="nombre"
                                            placeholder="Digite su Nombre" style="width: 100%;" />
                                    </div>
                                    <div class="texto1" id="texto1"></div>
                                </div>
                                <!-- /.form-group -->
                            </div>

                            <!-- /.col -->
                            <div class="row">

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="correo">Correo<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="email" class="form-control" id="correo"
                                            placeholder="Digite su Correo" style="width: 100%;" />
                                    </div>
                                    <div class="texto3" id="texto3"></div>
                                </div>
                                <!-- /.form-group -->
                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label for="direccion">Direccion<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="direccion" class="form-control" id="direccion"
                                            placeholder="Digite su Direccion" style="width: 100%;" />
                                    </div>
                                    <div class="texto4" id="texto4"></div>
                                </div>
                                <!-- /.form-group -->

                            </div>

                            <div class="row">

                                <!-- /.col -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="telefono">Telefono<span
                                                style="color: red; vertical-align: super;">*</span></label>
                                        <input type="telefono" class="form-control" id="telefono"
                                            placeholder="Digite su telefono" style="width: 100%;" />

                                    </div>
                                    <div class="texto5" id="texto5"></div>
                                    </br>
                                    <!-- /.form-group -->
                                </div>

                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label for="observacion">Observacion</label>
                                        <input type="observacion" class="form-control" id="observacion"
                                            placeholder="Digite su observacion" style="width: 100%;" />
                                    </div>
                                    <!-- /.form-group -->

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="nombre_contacto">Nombre Contacto<span
                                                style="color: red; vertical-align: super;">*</span> </label>
                                        <input type="text" class="form-control" id="nombre_contacto"
                                            name="contactoProov" placeholder="Nombre contacto" style="width: 100%;" />
                                    </div>
                                    <div class="texto8" id="texto8"></div>
                                </div>
                                <div class="" style="padding-right: 1%;"></div>
                                <div class="form-group">
                                    <label for="estado">Estado<span
                                            style="color: red; vertical-align: super;">*</span></label>
                                    <select type="estado" class="form-control" id="estado" style="width: 120%;">
                                        <option value="" disabled selected>Elija el estado</option>
                                        <option value="true">activo</option>
                                        <option value="false">inactivo</option>
                                    </select>
                                    <div class="texto5" id="texto6"></div>
                                </div>
                            </div>


                            <div class="row"></div>
                            <button id="btnActualizar" class="sendbtn btn btn-success" type="button"
                                name="action">Actualizar
                            </button>
                            <a href="/proveedores"><button class="sendbtn btn btn-secondary" type="button"
                                    onclick="actualizar()"> Regresar</button></a>

                            <script src="../../js/funcionesProveedores.js"></script>
                        </div>


                        <!-- /.card-body -->
                    </div>

                </div>


        </div>

        <!-- /.card -->
    </div>
    <!-- /.col -->
    </div>
    <!-- /.row -->
    <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    {{> footer}}

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
    </div>
    <!-- ./wrapper -->


    <!-- jQuery -->
    <script src="/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- DataTables  & Plugins -->
    <script src="/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="/plugins/datatables-buttons/js/dataTables.buttons.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.bootstrap4.min.js"></script>
    <script src="/plugins/jszip/jszip.min.js"></script>
    <script src="/plugins/pdfmake/pdfmake.min.js"></script>
    <script src="/plugins/pdfmake/vfs_fonts.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.html5.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.print.min.js"></script>
    <script src="/plugins/datatables-buttons/js/buttons.colVis.min.js"></script>
    <script src="https://kit.fontawesome.com/4de2284caa.js" crossorigin="anonymous"></script>
    <!-- AdminLTE App -->
    <script src="/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="/js/demo.js"></script>
    <!-- Page specific script -->
    <script>
        $(function () {
            $("#example1").DataTable({
                "responsive": true,
                "lengthChange": false, "autoWidth": false, "buttons": ["copy", "csv",
                    "excel", "pdf", "print", "colvis"]
            }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
            $('#example2').DataTable({
                "paging": true, "lengthChange": false,
                "searching": false, "ordering": true, "info": true, "autoWidth": false,
                "responsive": true,
            });
        });


    </script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.11/dist/sweetalert2.all.min.js"></script>
</body>

</html>